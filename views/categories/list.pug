extends ../layout

block content
  h1 Asset Categories
  a.btn.btn-success.mb-3(href='/categories/form') Add Category
  table.table.table-bordered.dataTable
    thead
      tr
        th Name
        th Description
        th Actions
    tbody
      each cat in categories
        tr
          td= cat.name
          td= cat.description
          td
            a.btn.btn-sm.btn-primary(href=`/categories/form/${cat.id}`) Edit
            a.btn.btn-sm.btn-danger(href=`/categories/delete/${cat.id}` onclick="return confirm('Delete?')") Delete
